---
import MainLayout from '~/layouts/MainLayout.astro';
---

<MainLayout>
	<div class="py-20 pb-24">
		<div
			class="flex flex-col justify-start overflow-clip font-mona text-8xl font-semibold leading-none text-neutral-900"
		>
			<h1 class="invisible text-center">Get In Touch</h1>
		</div>
	</div>
	<div
		class="relative flex content-center items-center justify-center bg-neutral-100 py-24 text-xs"
	>
		<div class="relative flex flex-grow flex-col content-center items-center justify-start px-8">
			<div
				class="invisible relative flex w-full max-w-screen-xl content-start items-start justify-start overflow-clip rounded-3xl"
				id="contact-form"
			>
				<div
					class="relative flex max-w-lg flex-col content-start items-start justify-center gap-[4.50rem] self-stretch bg-neutral-900 px-12 py-16"
				>
					<div class="flex flex-col content-start items-start justify-center gap-[0.63rem]">
						<div
							style="word-break: break-word;"
							class="heading-5 flex flex-col justify-start text-neutral-100"
						>
							<h3>Contact Details</h3>
						</div>
						<div
							style="word-break: break-word;"
							class="flex flex-col justify-start text-lg font-medium text-neutral-300"
						>
							<p>
								Novelio provides a concise format for showcasing essential contact details leaps
								next level of innovation.
							</p>
						</div>
					</div>
					<div
						class="relative flex flex-col content-start items-start justify-center gap-[3.75rem]"
					>
						<div class="flex flex-col content-start items-start justify-center gap-[0.63rem]">
							<div
								style="word-break: break-word;"
								class="heading-6 flex flex-col justify-start text-neutral-100"
							>
								<h4>Our Location</h4>
							</div>
							<div
								style="word-break: break-word;"
								class="flex flex-col justify-start text-lg font-medium text-neutral-300"
							>
								<p>3448 Ile De France St #242, Fort Wainwright, Alaska 99703, United States</p>
							</div>
						</div>
						<div class="flex flex-col content-center justify-center gap-4">
							<div
								style="word-break: break-word;"
								class="heading-6 flex flex-col justify-start text-neutral-100"
							>
								<h4>Phone Number</h4>
							</div>
							<div
								style="word-break: break-word;"
								class="flex flex-col justify-start text-lg font-medium text-neutral-300"
							>
								<p>+1 (717) 550-1675</p>
								<p>+4 (248) 762-0356</p>
							</div>
						</div>
					</div>
				</div>
				<div
					class="flex flex-grow flex-col content-start items-start justify-center self-stretch bg-neutral-200 p-16"
				>
					<div class="w-full rounded-xl bg-neutral-100 p-10">
						<form class="grid w-full grid-cols-1 gap-4">
							<input
								value=""
								type="text"
								placeholder="Name"
								class="col-span-1 h-14 cursor-text rounded-lg bg-gray-200 p-4 text-base text-neutral-900"
							/>
							<input
								value=""
								type="email"
								placeholder="Email"
								class="h-14 cursor-text rounded-lg bg-gray-200 p-4 text-base text-neutral-900"
							/>

							<textarea
								class="h-48 cursor-text resize-y rounded-lg bg-gray-200 p-4 text-base text-neutral-900"
								placeholder="Message"></textarea>

							<button
								type="submit"
								class="inline-block h-14 cursor-pointer items-start rounded-lg bg-neutral-900 p-4 text-center text-lg font-semibold text-neutral-100
								outline-none transition-colors hover:bg-neutral-800 focus:bg-neutral-800 focus:ring-2 focus:ring-neutral-900 focus:ring-offset-2"
								>Send message
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script>
		import { gsap } from 'gsap';
		import { ScrollTrigger } from 'gsap/ScrollTrigger';

		gsap.registerPlugin(ScrollTrigger);

		const tl = gsap.timeline({
			defaults: {
				opacity: 0,
				ease: 'power3.inOut',
				autoAlpha: 0,
			},
		});
		tl.from('h1', {
			y: 180,
			duration: 1,
			skewY: 7,
		}).from('#contact-form', {
			y: 50,
			duration: 1,
			ease: 'expo.out',
			delay: -0.2,
		});
	</script>
</MainLayout>
