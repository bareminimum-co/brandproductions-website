									</div>
									<textarea class="h-48 w-80 cursor-text resize-y rounded-lg bg-gray-200 p-4"
									></textarea><input
										value="Send message"
										type="submit"
										class="inline-block h-14 w-80 cursor-pointer items-start rounded-lg bg-neutral-900 p-4 text-center font-semibold text-neutral-100"
									/>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script>
		import { gsap } from 'gsap'
		import { ScrollTrigger } from 'gsap/ScrollTrigger'

		gsap.registerPlugin(ScrollTrigger)

		const tl = gsap.timeline({
			defaults: {
				opacity: 0,
				ease: 'power3.inOut',
				autoAlpha: 0,
			},
		})
		tl.from('h1', {
			y: 180,
			duration: 1,
			skewY: 7,
		}).from('#contact-form', {
			y: 50,
			duration: 1,
			ease: 'expo.out',
			delay: -0.2,
		})
	</script>
