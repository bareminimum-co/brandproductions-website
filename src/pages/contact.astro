---
import MainLayout from '~/layouts/MainLayout.astro'
---

<MainLayout>
	<div class="py-20 pb-24">
		<div
			class="flex flex-col justify-start overflow-clip font-mona text-8xl font-semibold leading-none text-neutral-900"
		>
			<h1 class="invisible text-center">Get In Touch</h1>
		</div>
	</div>
	<div
		class="relative flex content-center items-center justify-center bg-neutral-100 py-24 text-xs"
	>
		<div class="relative flex flex-grow flex-col content-center items-center justify-start px-8">
			<div
				class="invisible relative flex content-start items-start justify-start rounded-3xl"
				id="contact-form"
			>
				<div
					class="relative flex flex-col content-start items-start justify-center gap-[4.50rem] bg-neutral-900 px-12 py-16"
				>
					<div class="flex flex-col content-start items-start justify-center gap-[0.63rem]">
						<div
							style="word-break: break-word;"
							class="flex flex-col justify-start text-[2.50rem] leading-none text-neutral-100"
						>
							<h3>Contact Details</h3>
						</div>
						<div
							style="word-break: break-word;"
							class="flex flex-col justify-start text-lg font-medium text-neutral-200"
