---
import { Image } from 'astro:assets';
const { pathname } = Astro.url;
---

<nav
    class:list={[
        'content-center items-center text-xs justify-center py-8 relative flex h-min overflow-visible bg-neutral-100',
        { 'bg-white': pathname === '/contact' },
    ]}
>
    <div class="relative w-[88%] h-auto">
        <div class="content-center items-center justify-between relative flex">
            <a href="/">
                <Image
                    src={'https://brandproductions.ae/image/logo.png'}
                    class="w-auto h-10"
                    width={126}
                    height={40}
                    alt="Brand Productions"
                    loading="eager"
                />
            </a>

            <div
                class="content-start items-start justify-start relative flex w-min h-min gap-10 overflow-visible"
            >
                <div
                    class="content-center items-center justify-center relative flex w-min h-min overflow-visible text-lg text-blue-700 font-medium"
                >
                    <div class="relative w-auto h-auto">
                        <div class="contents">
                            <a
                                href="https://innovision.framer.website/./"
                                class="content-center items-center justify-center relative flex w-min h-min overflow-visible"
                            >
                                <div
                                    class="content-start items-start cursor-pointer flex-col justify-center relative flex w-min h-min overflow-visible text-neutral-700"
                                >
                                    <p>Home</p>
                                </div></a
                            >
                        </div>
                    </div>
                </div>
                <div
                    class="content-center items-center justify-center relative flex w-min h-min overflow-visible text-lg text-blue-700 font-medium"
                >
                    <div class="relative w-auto h-auto">
                        <div class="contents">
                            <a
                                href="https://innovision.framer.website/./service"
                                class="content-center items-center justify-center relative flex w-min h-min overflow-visible"
                                ><div
                                    class="content-start items-start cursor-pointer flex-col justify-center relative flex w-min h-min overflow-visible text-neutral-700"
                                >
                                    <p>Services</p>
                                </div></a
                            >
                        </div>
                    </div>
                </div>
                <div
                    class="content-center items-center justify-center relative flex w-min h-min overflow-visible text-lg text-blue-700 font-medium"
                >
                    <div class="relative w-auto h-auto">
                        <div class="contents">
                            <a
                                href="https://innovision.framer.website/./project"
                                class="content-center items-center justify-center relative flex w-min h-min overflow-visible"
                                ><div
                                    class="content-start items-start cursor-pointer flex-col justify-center relative flex w-min h-min overflow-visible text-neutral-700"
                                >
                                    <p>Project</p>
                                </div></a
                            >
                        </div>
                    </div>
                </div>
                <div
                    class="content-center items-center justify-center relative flex w-min h-min overflow-visible text-lg text-blue-700 font-medium"
                >
                    <div class="relative w-auto h-auto">
                        <div class="contents">
                            <a
                                href="/about"
                                class="content-center items-center justify-center relative flex w-min h-min overflow-visible"
                                ><div
                                    class="content-start items-start cursor-pointer flex-col justify-center relative flex w-min h-min overflow-visible text-neutral-700"
                                >
                                    <p>About</p>
                                </div></a
                            >
                        </div>
                    </div>
                </div>
            </div>

            <a
                href="/contact"
                class="inline-flex items-center justify-center px-6 py-3.5 text-base font-medium leading-6 text-white whitespace-no-wrap bg-brand border rounded-full focus:outline-none focus:shadow-none group"
                data-rounded="rounded-md"
            >
                Contact us
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    focusable="false"
                    viewBox="0 0 24 24"
                    color="rgb(247, 247, 247)"
                    fill="rgb(247, 247, 247)"
                    class="inline-block w-5 h-5 ml-3 group-hover:transform group-hover:-rotate-45 transition-transform duration-500 ease-in-out"
                    ><path
                        d="M15 5l-1.41 1.41L18.17 11H2v2h16.17l-4.59 4.59L15 19l7-7-7-7z"
                        fill="rgb(247, 247, 247)"></path></svg
                >
            </a>
        </div>
    </div>
</nav>
