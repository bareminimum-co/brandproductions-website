---
import type { HTMLAttributes } from 'astro/types';
import { Image } from 'astro:assets';

export type Props = HTMLAttributes<'nav'>;

const { class: className, ...attrs } = Astro.props;
---

<nav
  class:list={[
    'relative flex h-min content-center items-center justify-center overflow-visible bg-neutral-100 py-8 text-xs',
    className,
  ]}
  {...attrs}
>
  <div class="relative h-auto w-[88%]" id="nav-container">
    <div class="relative flex content-center items-center justify-between">
      <a href="/">
        <Image
          src={'https://brandproductions.ae/image/logo.png'}
          class="h-10 w-auto"
          width={126}
          height={40}
          alt="Brand Productions"
          loading="eager"
        />
      </a>

      <div
        class="relative hidden h-min w-min content-start items-start justify-start gap-10 overflow-visible lg:flex"
      >
        <div
          class="relative flex h-min w-min content-center items-center justify-center overflow-visible text-lg font-medium text-blue-700"
        >
          <div class="relative h-auto w-auto">
            <div class="contents">
              <a
                href="/"
                class="relative flex h-min w-min content-center items-center justify-center overflow-visible"
              >
                <div
                  class="relative flex h-min w-min cursor-pointer flex-col content-start items-start justify-center overflow-visible text-neutral-700"
                >
                  <p>Home</p>
                </div></a
              >
            </div>
          </div>
        </div>
        <div
          class="relative flex h-min w-min content-center items-center justify-center overflow-visible text-lg font-medium text-blue-700"
        >
          <div class="relative h-auto w-auto">
            <div class="contents">
              <a
                href="/services/"
                class="relative flex h-min w-min content-center items-center justify-center overflow-visible"
                ><div
                  class="relative flex h-min w-min cursor-pointer flex-col content-start items-start justify-center overflow-visible text-neutral-700"
                >
                  <p>Services</p>
                </div></a
              >
            </div>
          </div>
        </div>
        <div
          class="relative flex h-min w-min content-center items-center justify-center overflow-visible text-lg font-medium text-blue-700"
        >
          <div class="relative h-auto w-auto">
            <div class="contents">
              <a
                href="/works/"
                class="relative flex h-min w-min content-center items-center justify-center overflow-visible"
                ><div
                  class="relative flex h-min w-min cursor-pointer flex-col content-start items-start justify-center overflow-visible text-neutral-700"
                >
                  <p>Works</p>
                </div></a
              >
            </div>
          </div>
        </div>
        <div
          class="relative flex h-min w-min content-center items-center justify-center overflow-visible text-lg font-medium text-blue-700"
        >
          <div class="relative h-auto w-auto">
            <div class="contents">
              <a
                href="/about/"
                class="relative flex h-min w-min content-center items-center justify-center overflow-visible"
                ><div
                  class="relative flex h-min w-min cursor-pointer flex-col content-start items-start justify-center overflow-visible text-neutral-700"
                >
                  <p>About</p>
                </div></a
              >
            </div>
          </div>
        </div>
      </div>

      <div class="flex items-center gap-6">
        <a
          href="/contact/"
          class="whitespace-no-wrap group hidden items-center justify-center rounded-full border bg-brand px-6 py-3.5 text-base font-medium leading-6 text-white focus:shadow-none focus:outline-none md:inline-flex"
          data-rounded="rounded-md"
        >
          Contact us
          <svg
            xmlns="http://www.w3.org/2000/svg"
            focusable="false"
            viewBox="0 0 24 24"
            color="rgb(247, 247, 247)"
            fill="rgb(247, 247, 247)"
            class="ml-3 inline-block h-5 w-5 transition-transform duration-500 ease-in-out group-hover:-rotate-45 group-hover:transform"
            ><path
              d="M15 5l-1.41 1.41L18.17 11H2v2h16.17l-4.59 4.59L15 19l7-7-7-7z"
              fill="rgb(247, 247, 247)"></path></svg
          >
        </a>

        <!-- mobile menu hamburger -->
        <div
          class="relative flex h-min w-min content-center items-center justify-center gap-4 overflow-visible lg:hidden"
          x-data="{menuBarOpen: false, menuBarMenu: ''}"
          @click.away="menuBarOpen=false"
        >
          <button
            class="relative flex h-min w-min content-center items-center justify-center overflow-visible"
            aria-label="Open Menu"
            @click="menuBarOpen=!menuBarOpen; menuBarMenu='file'"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              focusable="false"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="h-6 w-6"
            >
              <path fill-rule="evenodd" d="M4 6h16v2H4V6zm0 5h16v2H4v-2zm16 7H4v2h16v-2z"></path>
            </svg>
          </button>
          <div
            x-show="menuBarOpen && menuBarMenu=='file'"
            x-transition:enter="transition ease-linear duration-100"
            x-transition:enter-start="-translate-y-1 opacity-90"
            x-transition:enter-end="translate-y-0 opacity-100"
            class="fixed left-0 top-0 z-50 mt-24 w-full min-w-[8rem] -translate-x-0.5 px-8"
            x-cloak
            style="display: none;"
          >
            <div
              class="rounded-md border border-neutral-200/70 bg-white p-1 text-sm text-neutral-800 shadow-md"
            >
              <a
                @click="menuBarOpen=false"
                class="group relative flex w-full cursor-default select-none items-center justify-between rounded px-2 py-1.5 outline-none hover:bg-neutral-100 hover:text-neutral-900 data-[disabled]:pointer-events-none data-[disabled]:opacity-50"
                href="/"
              >
                Home
              </a>
              <a
                @click="menuBarOpen=false"
                class="group relative flex w-full cursor-default select-none items-center justify-between rounded px-2 py-1.5 outline-none hover:bg-neutral-100 hover:text-neutral-900 data-[disabled]:pointer-events-none data-[disabled]:opacity-50"
                href="/services/"
              >
                Services
              </a>
              <a
                @click="menuBarOpen=false"
                class="group relative flex w-full cursor-default select-none items-center justify-between rounded px-2 py-1.5 outline-none hover:bg-neutral-100 hover:text-neutral-900 data-[disabled]:pointer-events-none data-[disabled]:opacity-50"
                href="/works/"
              >
                Works
              </a>
              <a
                @click="menuBarOpen=false"
                class="group relative flex w-full cursor-default select-none items-center justify-between rounded px-2 py-1.5 outline-none hover:bg-neutral-100 hover:text-neutral-900 data-[disabled]:pointer-events-none data-[disabled]:opacity-50"
                href="/about/"
              >
                About
              </a>
              <a
                @click="menuBarOpen=false"
                class="group relative flex w-full cursor-default select-none items-center justify-between rounded px-2 py-1.5 outline-none hover:bg-neutral-100 hover:text-neutral-900 data-[disabled]:pointer-events-none data-[disabled]:opacity-50 md:hidden"
                href="/about/"
              >
                Contact us
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>
